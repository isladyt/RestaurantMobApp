<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.restaurant.ui.auth.LoginFragment"
        android:label="Вход">
        <action
            android:id="@+id/action_login_to_menu"
            app:destination="@id/menuFragment" />
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registerFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.restaurant.ui.auth.RegisterFragment"
        android:label="Регистрация" />

    <fragment
        android:id="@+id/menuFragment"
        android:name="com.example.restaurant.ui.menu.MenuFragment"
        android:label="Меню" >
        <action
            android:id="@+id/action_menu_to_cart"
            app:destination="@id/cartFragment" />
    </fragment>

    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.restaurant.ui.cart.CartFragment"
        android:label="Корзина" />
</navigation>
